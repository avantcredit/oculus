<!DOCTYPE html>
<html>
  <head>
    <title>Oculus</title>
    <script src="<%= url('/js/jquery.min.js')%>" type="text/javascript"></script>
    <script src="<%= url('/js/bootstrap.min.js')%>" type="text/javascript"></script>
    <script src="<%= url('/js/codemirror.min.js')%>" type="text/javascript"></script>
    <script src="<%= url('/js/spin.min.js')%>" type="text/javascript"></script>
    <script src="<%= url('/js/application.js')%>" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="<%= url('/css/bootstrap.min.css')%>" />
    <link rel="stylesheet" type="text/css" href="<%= url('/css/style.css')%>" />
    <link rel="stylesheet" type="text/css" href="<%= url('/css/codemirror.css')%>" />
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="<%= url('/')%>">Oculus</a>
          <ul class="nav">
            <li<% if @current_tab == 'home' %> class="active"<% end %>>
            <a href="<%= url('/')%>">Home</a>
            </li>
            <li<% if @current_tab == 'starred' %> class="active"<% end %>>
            <a href="<%= url('/starred')%>">Starred</a>
            </li>
            <li<% if @current_tab == 'history' %> class="active"<% end %>>
            <a href="<%= url('/history')%>">History</a>
            </li>
          </ul>
          <div class="pull-right navbar-text">
            <%= Oculus.connection_string %>
          </div>
        </div>
      </div>
    </div>
    <div id="content" class="container">
      <%= yield %>
    </div>
  </body>
</html>
